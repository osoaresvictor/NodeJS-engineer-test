# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
indent_style = space
indent_size = 2

# Set default charset
charset = utf-8

# Trim trailing whitespace
trim_trailing_whitespace = true

# Tab settings for JSON, YAML, and Markdown files
[*.{json,yml,md}]
indent_style = space
indent_size = 2

# Specific settings for TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# Settings for JavaScript files
[*.js]
indent_style = space
indent_size = 2

# Settings for configuration files
[*.{js,json,yml}]
indent_style = space
indent_size = 2
